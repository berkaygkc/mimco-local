<div class="modal fade" id="new-driver-template" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="driver_template">Yeni Şoför</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="driver-name" class="form-label">Şoför Adı :</label>
                    <input type="text" id="driver-name" name="driver-name" class="form-control"
                        required>
                </div>
                <div class="mb-3">
                    <label for="driver-surname" class="form-label">Şoför Soyadı :</label>
                    <input type="text" id="driver-surname" name="driver-surname" class="form-control"
                        required>
                </div>
                <div class="mb-3">
                    <label for="driver-tc" class="form-label">Şoför TC Kimlik Numarası :</label>
                    <input type="text" id="driver-tc" name="driver-tc" class="form-control"
                        required>
                </div>
                <div class="d-grid">
                    <button type="submit" id="send-new-driver"
                        class="btn btn-success waves-effect waves-light">
                        Kaydet
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h5 class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                e-İrsaliye Şoför Tanımları
                            </div>
                            <button id="new-driver" type="button" class="btn btn-sm btn-success"
                                        data-bs-toggle="modal" data-bs-target="#new-driver-template">Yeni
                                        Şoför</button>
                        </h5>
                        <table id="drivers" class="table table-striped table-sm table-hover table-bordered"
                            style="width:100%">
                            <thead>
                                <tr>
                                    <th style="vertical-align: middle;">Adı</th>
                                    <th style="vertical-align: middle;">Soyadı</th>
                                    <th>TC Kimlik Numarası</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>